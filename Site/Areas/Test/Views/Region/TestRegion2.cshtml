@model RegionModel
<div class="region" @Html.DxaRegionMarkup()>
    <h3>Rendered @Model with Region View "Test:TestRegion2"</h3>
    
    @if (Model.Regions.Count > 0)
    {
        <h4>Nested Regions</h4>
        <div>
            @Html.DxaRegions()
        </div>
    }
    <p>TestRegion2 Container size - @ViewBag.ContainerSize</p>

    <h4>Entities with inerited containerSize</h4>
    <div>
        @Html.DxaEntities()
    </div>

    <p>Entities with custom containerSize</p>
    <div>
        @Html.DxaEntities(containerSize: 1)
    </div>
</div>
