@model PageModel
<html>
    <head>
        <title>@Model.Title</title>
        <style>
            .region { border: solid; }
            .entity { border: dashed thin; }
            td { border: solid thin; }
        </style>
    </head>
    <body>
        <h2>Rendered @Model with Page View "Test:TestPage2"</h2>
        
        <h2>C513177 - All Regions, default container size</h2>
        <div>
            @Html.DxaRegions()
        </div>

        <h2>C539401 - All Regions, container size 0</h2>
        <div>
            @Html.DxaRegions(containerSize: 0)
        </div>

        <h2>C539402 - All Regions, container size 1</h2>
        <div>
            @Html.DxaRegions(containerSize: 1)
        </div>

        <h2>C539403 - All regions, container size 100</h2>
        <div>
            @Html.DxaRegions(containerSize: 100)
        </div>

        <h2>C539404 - All regions, container size -100</h2>
        <div>
            @Html.DxaRegions(containerSize: -100)
        </div>

        <h2>C513178 - TestRegion1, TestRegion2 excluded</h2>
        <div>
            @Html.DxaRegions(exclude: "TestRegion1,TestRegion2")
        </div>

        <h2>C513179 - Non-existing regions excluded</h2>
        <div>
            @Html.DxaRegions(exclude: "TestRegionC513179-1,TestRegionC513179-2")
