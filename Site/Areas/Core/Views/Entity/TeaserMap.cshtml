@model Teaser
<div @Markup.Entity(Model)>
    <h3 @Markup.Property(Model,"Headline")>
        @if (Model.Link!=null && Model.Link.Url != null)
        {
            <a href="@Model.Link.Url">@Model.Headline</a>
        }
        else
        {
            <text>@Model.Headline</text>
        }
    </h3>
    @if (Model.Location != null)
    {
        @* TODO: set MapWidth dynamicly in Partials/GoogleStaticMap based on aspect ratio *@
        @Html.Partial("Partials/GoogleStaticMap", Model.Location, new ViewDataDictionary { { "MarkerName", Model.Headline}, { "MapHeight", "160"}, { "MapWidth", "311"} })
    }
</div>