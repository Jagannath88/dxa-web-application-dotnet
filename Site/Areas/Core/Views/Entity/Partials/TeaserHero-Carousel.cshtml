@using Sdl.Web.Common.Extensions
@model Teaser
<div @Markup.Entity(Model)>
    @if (Model.Media != null)
    {
        <span @Markup.Property(Model, "Media")>            
            @Html.Media(Model.Media, "100%", 3.3)
        </span>
    }
    @if (!String.IsNullOrEmpty(Model.Headline) || !String.IsNullOrEmpty(Model.Text))
    {
        if (Model.Link.IsLinkWithText())
        {
            <h4 class="overlay overlay-tr glow" @Markup.Property(Model, "Headline")>
                @Model.Headline
                @if(!String.IsNullOrEmpty(Model.Text))
                {
                    <br/><small @Markup.Property(Model, "Text")>@Html.Raw(Model.Text.Replace(". ", ".<br/>"))</small>
                }
            </h4>
            <div class="carousel-caption">
                <p><a href="@Model.Link.Url" title="@Model.Link.AlternateText" class="btn btn-primary" @Markup.Property(Model, "Link")>@Model.Link.LinkText</a></p>
            </div>
        }
        else
        {
            <h4 class="overlay overlay-tl ribbon" @Markup.Property(Model, "Headline")>
                @Model.Headline
                @if(!String.IsNullOrEmpty(Model.Text))
                {
                    <br/><small @Markup.Property(Model, "Text")>@Html.Raw(Model.Text.Replace(". ", ".<br/>"))</small>
                }
            </h4>
        }
    }
</div>