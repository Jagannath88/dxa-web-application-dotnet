@model LinkList<Link>
<ul id="@Model.MvcData.HtmlId" class="list-inline text-center @Model.MvcData.HtmlClasses" @Html.DxaEntityMarkup()>
    @if (Model.Headline != null)
    {
        <li>
            <small @Html.DxaPropertyMarkup(() => Model.Headline)>@Model.Headline</small>
        </li>
    }
    @{ int index = 0; }
    @foreach (var link in Model.Links)
    {
        <li>
            <small @Html.DxaPropertyMarkup(() => Model.Links, index)><a href="@link.Url" title="@link.AlternateText">@link.LinkText</a></small>
        </li>
        index++;
    }
</ul>