@model Region
<div class="navbar-collapse collapse" @Markup.Region(Model)>
    @foreach (var item in Model.Items)
    {
        @ViewBag.Renderer.Render(item,Html)
    }
    @* TODO Hardcoded - The main nav and search box will become CPs in the region eventually*@
    @Html.Action("TopNavigation","Navigation")
    <form class='navbar-form navbar-right' action="/search">
        <div class="form-group">
            <input name="q" type="text" class="form-control" placeholder="Search">
        </div>
    </form>
</div>