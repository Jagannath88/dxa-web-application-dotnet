@model Sdl.Web.Mvc.Models.Teaser
<div @Markup.Entity(Model)>
    <h3 @Markup.Property(Model,"Headline")><a href="@Model.Link.Url">@Model.Headline</a></h3>
    @if (Model.Location != null)
    {
    @Html.Partial("Core/Partials/GoogleMap", Model.Location, new ViewDataDictionary { { "MarkerName", Model.Headline},{ "MapHeight", "200px"} })
    }
</div>