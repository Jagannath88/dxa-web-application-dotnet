@model Sdl.Web.Mvc.Models.ItemList
<div id="carousel-large" class="carousel slide">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.ItemListElement.Count; i++)
        {
            <li data-target="#carousel-large" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>
    <div class="carousel-inner">
        @for(int i=0 ;i < Model.ItemListElement.Count; i++)
        {
            var item = Model.ItemListElement[i];
            <div class="item @(i==0?"active":"")">
                @if (item is Teaser)
                {
                    Html.RenderPartial("Teaser-Carousel", item);
                }
                else if (item is Image)
                {
                    var img = (Image)Model.ItemListElement[i];
                    <img src="@Html.FixedSizeImageUrl(img.Url, 350, true, 3.3)" alt="@img.AlternateText" />
                }
            </div>
        }
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-large" data-slide="prev">
        <i class='fa fa-chevron-left carousel-icon-left'></i>
    </a>
    <a class="right carousel-control" href="#carousel-large" data-slide="next">
        <i class='fa fa-chevron-right carousel-icon-right'></i>
    </a>
</div>
