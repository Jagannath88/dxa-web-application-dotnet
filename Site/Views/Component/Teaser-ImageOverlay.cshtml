@model Sdl.Web.Mvc.Models.Teaser
<div class="feature">
    @if (Model.Link!=null)
    {
        <a href="@Model.Link.Url" title="@Model.Link.AlternateText">
            <img src="@Html.FixedSizeImageUrl(Model.Image.Url, 350, true)">
        </a>
    }
    else
    {
        <img src="@Html.FixedSizeImageUrl(Model.Image.Url, 350, true)">
    }
    <h4 class="overlay overlay-top ribbon">@Model.Headline</h4>
    <p class="overlay overlay-bottom glow">@Model.Text</p>
</div>